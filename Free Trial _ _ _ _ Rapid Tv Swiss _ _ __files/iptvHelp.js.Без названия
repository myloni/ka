jQuery(document).ready(function(){
	jQuery('.closeSerchHelo').hide();
	jQuery('.serach_help_wrap').hide();
	jQuery(document).on('change keypress','.articleSearchInput', function (){
		if(jQuery('.articleSearchInput').val()===''){
			jQuery( ".articleSearchInput" ).trigger( "click" );
		}
		var res ;
		var search_text = jQuery('.articleSearchInput').val();
		jQuery('#loadingmessage').show();
		jQuery('.searchResults').empty();
		jQuery.ajax({
			type : "post",
			url : smAjax.ajaxurl,
			data: 'search='+search_text+'&total=8&action=sm_iptv_help',
			success: function(response){
				jQuery('#loadingmessage').hide();
				var res = JSON.parse(response);
				var page_url = window.location.href.split('?')[0];
				jQuery('.closeSerchHelo').show();
				jQuery.each(res.articles, function( k, v ) {
					jQuery('.searchResults').append('<a href="'+page_url+'?r='+res.articles[k].title_link+'" class="searchResultItems" >'+res.articles[k].title+'</a>');				
				});
			}
		});
	});
	
	/*
	jQuery(document).on('click', '.closeSerchHelo', function(){
		jQuery('.searchResults, .articleSearchInput').empty();
		jQuery('.articleSearchInput').val("");
		jQuery('.closeSerchHelo').hide();	
		jQuery('#loadingmessage').hide();
	}); 

	jQuery(document).on('click', 'span.search_dots', function(e){
		jQuery('.serach_help_wrap').toggle();
	});
	jQuery(document).click (function (e) {
		if (e.target != jQuery('.search_dots')[0]) {
			jQuery('.serach_help_wrap').hide();
		}
	});
	*/
});